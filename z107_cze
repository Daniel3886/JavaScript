  <script language="JavaScript">
     function okno_zamknij_czerczon() {
            window.close()
        }

    function openPage(pageUrl) {
  const largeWindow = document.querySelector('.large-window');
  largeWindow.innerHTML = `<iframe src="${pageUrl}" width="100%" height="100%"></iframe>`;
}

function forwardPage() {
  history.forward();
}

function backPage() {
  history.back();
}

function refreshPage() {
  location.reload();
}

function printPage() {
  window.print();
}

  </script>

</head>
<body>
  <div class="menu">
    <div class="options">
      <button onclick="openPage('index.html')">Główna Strona</button>
      <button onclick="openPage('z5_cze.html')">zadanie 5</button>
      <button onclick="openPage('idk.html')">Oblicznia F. Kwadratowej</button>
    </div>
    <div class="buttons">
      <button onclick="forwardPage()">Strona do przodu</button>
      <button onclick="printPage()">Drukuj stronę</button>
      <button onclick="backPage()">Wstecz strona</button>
      <button onclick="refreshPage()">Odśwież stronę</button>
    </div>
  </div>
  <div class="large-window">
  </div>
  <input type="button" value="zamknij okno" onclick="okno_zamknij_czerczon()" />

