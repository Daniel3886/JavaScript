  <script type="text/javascript">
    // Your object-oriented programming JavaScript code here
    // ...

    function Osoba(nazwisko, imie, zawod) {
      this.nazwisko = nazwisko;
      this.imie = imie;
      this.zawod = zawod;
      this.kierowca = 'Jan Kowalski'; // Nowa właściwość poza ciałem obiektu
    }

    Osoba.prototype.pokaz = function () {
      alert(this.nazwisko + ' ' + this.imie + ' ' + this.zawod);
    };

    Osoba.prototype.pokazKierowce = function () {
      alert('Kierowca: ' + this.kierowca);
    };

    var osoba1 = new Osoba("Kowalski", "Jan", "kierowca");
    var osoba2 = new Osoba('Nowak', 'Anna', 'sekretarka');
    osoba1.pokaz();
    osoba1.pokazKierowce(); // Wywołanie nowej metody
    osoba2.pokaz();
  </script>
