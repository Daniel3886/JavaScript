<html>
  <body>
    <div style="color:green; font-size:50px;">
      <script language="JavaScript">
        document.write("MENU<br><br>");
        document.write("<font color=red size=4>1 - Czerwony<br>");
        document.write("<font color=blue size=4>2 - Niebieski<br>");

        var x = prompt("podaj liczbę x=", "");
        var a = parseFloat(x);

        function myFunction() {
          if (a == 1) {
            document.getElementById("SprawdzButton").innerHTML = "<font color=red size=4>Wpisałeś kolor czerwony x=</font>" + a + "<br>";
          } else if (a == 2) {
            document.getElementById("SprawdzButton").innerHTML = "<font color=blue size=4>Wpisałeś kolor niebieski x=</font>" + a + "<br>";
          } else {
            // Add code for other cases a=0 and a<0
          }
          // polskie litery mają działać (uzupełnij w kodzie strony)
        }
      </script>
      
      <input type="button" id="SprawdzButton" value="Sprawdz" onclick="myFunction();"><br><br>
    </div>
  </body>
